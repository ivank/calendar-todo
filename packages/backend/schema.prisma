generator cleint {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("POSTGRES_URI")
}

model TodoNamedList {
  id        Int      @id @default(autoincrement())
  title     String
  items     Json[]
  userId    Int
  updatedAt DateTime @updatedAt
  orderBy   Int
  user      User     @relation(fields: [userId], references: [id])

  @@unique([userId, orderBy])
  @@index([userId])
}

model TodoDayList {
  id        Int      @id @default(autoincrement())
  items     Json[]
  userId    Int
  updatedAt DateTime @updatedAt
  day       String
  user      User     @relation(fields: [userId], references: [id])

  @@unique([userId, day])
  @@index([userId])
  @@index([day])
}

model Authenticator {
  id                   Int      @id @default(autoincrement())
  credentialID         String
  credentialPublicKey  Bytes
  credentialDeviceType String
  credentialBackedUp   Boolean
  counter              BigInt
  transports           String[]

  userId        Int
  user          User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  @@index([credentialID])
}

model User {
  id               Int      @id @default(autoincrement())
  email            String   
  name             String   
  challenge        String   @default("-")
  image            String?
  authenticators   Authenticator[]

  namedLists TodoDayList[]
  dayLists   TodoNamedList[]

  @@unique([email])
}
