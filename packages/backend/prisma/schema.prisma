generator cleint {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model List {
  id        Int      @id @default(autoincrement())
  title     String?
  items     Json[]
  updatedAt DateTime @updatedAt
  position  Int
  type      ListType
  userId    Int
  user      User     @relation(fields: [userId], references: [id])

  @@unique([userId, position, type])
  @@index([userId])
  @@index([position])
  @@index([type])
}

enum ListType {
  DAY
  NAMED
}

model Authenticator {
  id                   Int      @id @default(autoincrement())
  credentialID         String
  credentialPublicKey  Bytes
  credentialDeviceType String
  credentialBackedUp   Boolean
  counter              BigInt
  transports           String[]

  userId        Int
  user          User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  @@index([credentialID])
}

model User {
  id               Int      @id @default(autoincrement())
  email            String   
  name             String   
  challenge        String   @default("-")
  image            String?
  authenticators   Authenticator[]

  lists List[]

  @@unique([email])
}
